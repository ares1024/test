<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_distribution"
        android:id="@+id/appCompatImageView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="19dp"
        android:text="Button" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/appCompatImageView"
        android:layout_alignRight="@+id/appCompatImageView"
        android:layout_alignTop="@+id/button"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="crash" />

    <Button
        android:id="@+id/btn_service_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="service"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="34dp" />

    <Button
        android:id="@+id/start_ps_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_service_activity"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:text="启动近场传感器" />
</RelativeLayout>